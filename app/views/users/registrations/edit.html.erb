<section >
  <div class='container'>
    <div class='row'>
      <div class='col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-12 col-sm-12'>
        <div class='page-header'>
          <h1> Edit <%= current_user.username %></h1>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>
          <div class='form-group'>
            <%= f.label :email %> <br />
            <%= f.email_field :email, autofocus: true, :class => 'wallet-form' %>
          </div>
          <div class='form-group'>
            <%= f.label :username %> <br />
            <%= f.text_field :username, :class => 'wallet-form' %>
          </div>
          <div class='form-group'>
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", :class => 'wallet-form' %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'wallet-form' %>
          </div>
          <div class="form-group">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :class => 'wallet-form' %>
          </div>
          <div class='actions'>
            <%= f.submit 'Update', :class => 'pull-right btn btn-wallet' %>
          </div>
        <% end %>
        <br />
        <div class='page-header'>
          <h3> Unhappy? </h3>
        </div>
        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, :class => 'btn btn-wallet' %>
      </div>
    </div>
  </div>
</section>
